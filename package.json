{
  "name": "marvel-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "clean": "rm -rf dist/",
    "build": "npm run clean && babel src -d dist",
    "dev": "babel-node ./bin/www dev",
    "test": "nyc --all mocha --require babel-core/register",
    "debug": "nodemon --inspect --exec 'npm run dev'",
    "eslint": "eslint src/",
    "eslint-fix": "eslint src/ --fix"
  },
  "dependencies": {
    "body-parser": "~1.18.3",
    "cookie-parser": "~1.3.5",
    "crypto": "~1.0.1",
    "dotenv": "~6.0.0",
    "express": "~4.16.3",
    "helmet": "~3.13.0",
    "moment": "~2.22.2",
    "morgan": "~1.9.0",
    "request": "~2.87.0",
    "request-promise": "^4.2.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-airbnb": "^2.5.3",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "mocha": "^5.2.0",
    "nock": "^9.4.4",
    "node-mocks-http": "^1.7.0",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "dist"
    ]
  }
}
